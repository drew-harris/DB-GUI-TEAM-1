// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// These are just example models, the google doc will get converted to this

model User {
  id        String   @id @default(cuid())
  username  String
  email     String
  password  String
  createdAt DateTime @default(now())

  reviews Review[]
  ratings Rating[]
  lists   List[]
  requests MovieRequest[]
  bio String?
  profileImageUrl String?
}

model Movie {
  id               Int       @id @default(autoincrement())
  title            String
  description      String?   @db.VarChar(1000)
  posterImageUrl   String?
  backdropImageUrl String?
  genre            String?
  releaseDate      DateTime?
  tagline          String?
  tmdbPopularity   Decimal?
  tmdbVoteCount    Int?
  runTime          Int?

  reviews Review[]
  ratings Rating[]
  inLists List[]
}

model MovieRequest {
  id String @id @default(cuid())
  title String
  message String?
  approved Boolean @default(false)
  submittedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  userId String
}

model Review {
  id          String   @id @default(cuid())
  content     String   @db.VarChar(1000)
  submittedAt DateTime @default(now())

  for     Movie @relation(fields: [movieId], references: [id])
  movieId Int

  by     User   @relation(fields: [userId], references: [id])
  userId String
}

model Rating {
  id          String   @id @default(cuid())
  score       Int
  submittedAt DateTime @default(now())

  for     Movie @relation(fields: [movieId], references: [id])
  movieId Int

  by     User   @relation(fields: [userId], references: [id])
  userId String
}

model List {
  id   String @id @default(cuid())
  name String @default("Watched")

  createdAt DateTime @default(now())

  movies Movie[]
  user   User    @relation(references: [id], fields: [userId])
  userId String
}
