{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", "dist/**"],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "package.json",
        ".env",
        "index.html",
        "vite.config.ts"
      ],
      "dependsOn": ["regen", "^build"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "serve": {
      "dependsOn": ["build"]
    },
    "lint": {
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "package.json",
        ".eslintrc.cjs",
        ".eslintrc.js",
        "index.html"
      ]
    },

    "regen": {
      "inputs": ["prisma/schema.prisma"]
    }
  }
}
